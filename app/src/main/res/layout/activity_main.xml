<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="2"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:weightSum="4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="4">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#9d27af" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:background="#fe6bb1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="4">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="#fcca58" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="#cceed6"
                android:orientation="vertical"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <com.atelierul_digital.SquareLinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:background="#3f51b4" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="4">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:background="#49f915" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#c4fb6a" />
        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/rect_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="#fcca58"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/square_1" />

            <com.atelierul_digital.SquareLinearLayout
                android:id="@+id/square_1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#9d27af"
                app:layout_constraintLeft_toRightOf="@id/rect_1"
                app:layout_constraintRight_toLeftOf="@id/square_2">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerInParent="true"
                        android:background="#fe6bb1" />
                </RelativeLayout>
            </com.atelierul_digital.SquareLinearLayout>

            <com.atelierul_digital.SquareLinearLayout
                android:id="@+id/square_2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#fe6bb1"
                app:layout_constraintLeft_toRightOf="@id/square_1"
                app:layout_constraintRight_toLeftOf="@id/rect_2" />

            <TextView
                android:id="@+id/rect_2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="#fcca58"
                app:layout_constraintLeft_toRightOf="@id/square_2"
                app:layout_constraintRight_toLeftOf="@id/square_3" />

            <com.atelierul_digital.SquareLinearLayout
                android:id="@+id/square_3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#79ccc6"
                app:layout_constraintLeft_toRightOf="@id/rect_2"
                app:layout_constraintRight_toRightOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</LinearLayout>